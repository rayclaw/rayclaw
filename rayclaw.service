[Unit]
Description=RayClaw AI Bot
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/rayclaw
ExecStart=/home/ubuntu/rayclaw/target/release/rayclaw start
Restart=always
RestartSec=3

# 日志
StandardOutput=append:/var/log/rayclaw.log
StandardError=append:/var/log/rayclaw.log

# 环境变量
Environment=RUST_LOG=info
Environment=HOME=/home/ubuntu

# 优雅关闭等待
TimeoutStopSec=10
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target
